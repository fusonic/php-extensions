{
    "name": "fusonic/messenger-mailer-bundle",
    "license": "MIT",
    "version": "2.0.0",
    "description": "Symfony bundle for asynchronous e-mails with attachments through Symfony Messenger.",
    "type": "symfony-bundle",
    "authors": [
        {
            "name": "Fusonic GmbH",
            "email": "office@fusonic.net"
        }
    ],
    "autoload": {
        "psr-4": {
            "Fusonic\\MessengerMailerBundle\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Fusonic\\MessengerMailerBundle\\Tests\\": "tests/"
        },
        "classmap": [
            "tests/app/TestKernel.php"
        ]
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "phpstan/phpstan": "^1.5",
        "friendsofphp/php-cs-fixer": "^3.13",
        "symfony/framework-bundle": "^6.2",
        "phpstan/phpstan-strict-rules": "^1.1",
        "phpstan/phpstan-phpunit": "^1.1",
        "phpstan/phpstan-symfony": "^1.1",
        "symplify/phpstan-rules": "^11.1",
        "tomasvotruba/type-coverage": "^0.0.9"
    },
    "require": {
        "php": ">=8.1",
        "symfony/mime": "^6.2",
        "symfony/http-kernel": "^6.2",
        "symfony/config": "^6.2",
        "symfony/dependency-injection": "^6.2",
        "symfony/messenger": "^6.2",
        "symfony/filesystem": "^6.2",
        "symfony/yaml": "^6.2",
        "symfony/mailer": "^6.2",
        "symfony/twig-bridge": "^6.2"
    },
    "scripts": {
        "phpstan": "XDEBUG_MODE=off php -d memory_limit=2048M vendor/bin/phpstan analyse",
        "phpcs-check": "XDEBUG_MODE=off vendor/bin/php-cs-fixer fix --config=.php-cs-fixer.dist.php -v --dry-run --diff --using-cache=yes --allow-risky=yes",
        "phpcs-fix": "XDEBUG_MODE=off vendor/bin/php-cs-fixer fix --config=.php-cs-fixer.dist.php -v --using-cache=yes --allow-risky=yes",
        "test": "XDEBUG_MODE=off vendor/bin/phpunit --testdox",
        "test-coverage" : "XDEBUG_MODE=coverage vendor/bin/phpunit --coverage-text --coverage-cobertura=coverage/cobertura.xml --coverage-html=coverage/html"
    }
}
